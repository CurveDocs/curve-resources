{
  "rewrites": [
    {
      "source": "/ru/:match*/",
      "destination": "https://curve-resources-ru.vercel.app/:match*"
    },
    {
      "source": "/ru/:match*",
      "destination": "https://curve-resources-ru.vercel.app/:match*"
    },
    {
      "source": "/ru/",
      "destination": "https://curve-resources-ru.vercel.app/"
    }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}
